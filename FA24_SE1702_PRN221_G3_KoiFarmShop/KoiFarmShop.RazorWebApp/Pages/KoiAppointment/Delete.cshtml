@page "{id:guid}"
@model KoiFarmShop.RazorWebApp.Pages.KoiAppointment.DeleteModel

@{
    ViewData["Title"] = "Delete Appointment";
}

<h1>Delete Appointment</h1>

<p>Are you sure you want to delete this appointment?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Appointment ID</dt>
        <dd class="col-sm-10">@Model.Appointment.Id</dd>

        <dt class="col-sm-2">Customer ID</dt>
        <dd class="col-sm-10">@Model.Appointment.CustomerId</dd>

        <dt class="col-sm-2">Pet ID</dt>
        <dd class="col-sm-10">@Model.Appointment.PetId</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Appointment.AppointmentDate.ToString("f")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Appointment.Status</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Appointment.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
