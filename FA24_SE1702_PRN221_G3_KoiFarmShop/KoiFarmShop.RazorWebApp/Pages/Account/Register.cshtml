@page
@model KoiFarmShop.RazorWebApp.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="RegisterRequest.FullName" class="control-label">Full Name</label>
        <input asp-for="RegisterRequest.FullName" class="form-control" />
        <span asp-validation-for="RegisterRequest.FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.Email" class="control-label">Email</label>
        <input asp-for="RegisterRequest.Email" type="email" class="form-control" />
        <span asp-validation-for="RegisterRequest.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.PhoneNumber" class="control-label">Phone Number</label>
        <input asp-for="RegisterRequest.PhoneNumber" class="form-control" />
        <span asp-validation-for="RegisterRequest.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.Address" class="control-label">Address</label>
        <input asp-for="RegisterRequest.Address" class="form-control" />
        <span asp-validation-for="RegisterRequest.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.Username" class="control-label">Username</label>
        <input asp-for="RegisterRequest.Username" class="form-control" />
        <span asp-validation-for="RegisterRequest.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.Password" class="control-label">Password</label>
        <input asp-for="RegisterRequest.Password" type="password" class="form-control" />
        <span asp-validation-for="RegisterRequest.Password" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="RegisterRequest.DateOfBirth" class="control-label">Date of Birth</label>
        <input asp-for="RegisterRequest.DateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="RegisterRequest.DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.Role" class="control-label">Role</label>
        <select asp-for="RegisterRequest.Role" class="form-control">
            <option value="5">Customer</option>
            <option value="4">Staff</option>
            <option value="3">Veterinarian</option>
            <option value="2">Manager</option>
            <option value="1">Admin</option>
        </select>
        <span asp-validation-for="RegisterRequest.Role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
    <p class="text-danger">@Model.ErrorMessage</p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
