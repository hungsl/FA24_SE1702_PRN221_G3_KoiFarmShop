@page
@model KoiFarmShop.RazorWebApp.Pages.ProductMedicine.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<!-- Search Form -->
<form method="get" class="row g-3 mb-3">
    <div class="col-auto">
        <label for="SearchField" class="form-label">Search by:</label>
        <select name="SearchField" class="form-control">
            <option value="Name" selected>Name</option>
            <option value="Description">Description</option>
            <option value="ProductDimensions">Product Dimensions</option>
        </select>
    </div>

    <div class="col-auto">
        <label for="SearchTerm" class="form-label">Search Term:</label>
        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Enter search term" />
    </div>

    <div class="col-auto">
        <label for="MinPrice" class="form-label">Min Price:</label>
        <input type="number" step="0.01" name="MinPrice" value="@Model.MinPrice" class="form-control" placeholder="Min Price" />
    </div>

    <div class="col-auto">
        <label for="MaxPrice" class="form-label">Max Price:</label>
        <input type="number" step="0.01" name="MaxPrice" value="@Model.MaxPrice" class="form-control" placeholder="Max Price" />
    </div>

    <div class="col-auto d-flex align-items-end">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>


<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].StockQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].DiscountPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].IsFeatured)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].SKU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].ProductDimensions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].ProductCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].ModifiedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Items[0].IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product.Items)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFeatured)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SKU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDimensions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCategory.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<!-- Phân trang -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (var i = 1; i <= (int)Math.Ceiling((double)Model.Product.TotalItems / Model.PageSize); i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-route-pageIndex="@i" asp-route-SearchTerm="@Model.SearchTerm">@i</a>
            </li>
        }
    </ul>
</nav>