@page
@model KoiFarmShop.RazorWebApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="LoginRequest.Username" class="control-label"></label>
        <input asp-for="LoginRequest.Username" class="form-control" />
        <span asp-validation-for="LoginRequest.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoginRequest.Password" class="control-label"></label>
        <input asp-for="LoginRequest.Password" type="password" class="form-control" />
        <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
    <p class="text-danger">@Model.ErrorMessage</p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
