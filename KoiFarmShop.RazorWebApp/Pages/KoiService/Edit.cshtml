    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PetService</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PetService.Id" />

            <div class="form-group">
                <label asp-for="PetService.Name" class="control-label"></label>
                <input asp-for="PetService.Name" class="form-control" />
                <span asp-validation-for="PetService.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetService.PetServiceCategory.Name" class="control-label"></label>
                <select asp-for="PetService.PetServiceCategoryId" class="form-control" asp-items="ViewBag.PetServiceCategoryId"></select>
                <span asp-validation-for="PetService.PetServiceCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetService.BasePrice" class="control-label"></label>
                <input asp-for="PetService.BasePrice" class="form-control" />
                <span asp-validation-for="PetService.BasePrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetService.Duration" class="control-label"></label>
                <input asp-for="PetService.Duration" class="form-control" />
                <span asp-validation-for="PetService.Duration" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetService.ImageUrl" class="control-label"></label>
                <input asp-for="PetService.ImageUrl" class="form-control" />
                <span asp-validation-for="PetService.ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetService.AvailableFrom" class="control-label"></label>
                <input asp-for="PetService.AvailableFrom" class="form-control" />
                <span asp-validation-for="PetService.AvailableFrom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetService.AvailableTo" class="control-label"></label>
                <input asp-for="PetService.AvailableTo" class="form-control" />
                <span asp-validation-for="PetService.AvailableTo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetService.TravelCost" class="control-label"></label>
                <input asp-for="PetService.TravelCost" class="form-control" />
                <span asp-validation-for="PetService.TravelCost" class="text-danger"></span>
            </div>

            <!-- Thêm trường Description -->
            <div class="form-group">
                <label asp-for="PetService.Description" class="control-label"></label>
                <textarea asp-for="PetService.Description" class="form-control"></textarea>
                <span asp-validation-for="PetService.Description" class="text-danger"></span>
            </div>

            <!-- Thêm trường MaxNumberOfPets -->
            <div class="form-group">
                <label asp-for="PetService.MaxNumberOfPets" class="control-label"></label>
                <input asp-for="PetService.MaxNumberOfPets" class="form-control" />
                <span asp-validation-for="PetService.MaxNumberOfPets" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

