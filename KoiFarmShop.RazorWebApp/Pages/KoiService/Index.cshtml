@page
@model KoiFarmShop.RazorWebApp.Pages.KoiService.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pet Services List</h1>

<!-- Form Tìm kiếm -->
<form method="get" class="row g-3 mb-3">
    <div class="col-auto">
        <label for="SearchTerm" class="form-label">Search by Name:</label>
        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Enter service name" />
    </div>
    <div class="col-auto d-flex align-items-end">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
<p>
    <a asp-page="Create">Create New</a>
</p>
@if (Model.PetService != null && Model.PetService.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PetService.Items[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetService.Items[0].BasePrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetService.Items[0].Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetService.Items[0].ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetService.Items[0].AvailableFrom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetService.Items[0].AvailableTo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetService.Items[0].TravelCost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetService.Items[0].PetServiceCategory.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetService.Items[0].CreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetService.Items[0].ModifiedDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PetService.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BasePrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailableFrom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailableTo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TravelCost)
                    </td>
                    <td>
                        @if (item.PetServiceCategory != null)
                        {
                            @Html.DisplayFor(modelItem => item.PetServiceCategory.Name)
                        }
                        else
                        {
                            <span>N/A</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (var i = 1; i <= (int)Math.Ceiling((double)Model.PetService.TotalItems / Model.PageSize); i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-route-pageIndex="@i" asp-route-SearchTerm="@Model.SearchTerm">@i</a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <p>No Pet Services found.</p>
}
