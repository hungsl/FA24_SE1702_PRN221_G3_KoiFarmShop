@page
@model KoiFarmShop.RazorWebApp.Pages.KoiAppointment.CreateModel

@{
    ViewData["Title"] = "Create Appointment";
}

<h1>Create Appointment</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="CustomerId" class="control-label">Customer ID</label>
        <input asp-for="CustomerId" class="form-control" id="CustomerId" />
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PetId" class="control-label">Pet</label>
        <select asp-for="PetId" class="form-control" id="PetId">
            <option value="">-- Select Pet --</option>
        </select>
        <span asp-validation-for="PetId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PetServiceId" class="control-label">Pet Service</label>
        <select asp-for="PetServiceId" class="form-control" asp-items="@(new SelectList(Model.PetServices, "Id", "Name"))">
            <option value="">-- Select Pet Service --</option>
        </select>
        <span asp-validation-for="PetServiceId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VeterinarianIds" class="control-label">Veterinarian IDs</label>
        <input asp-for="VeterinarianIds" class="form-control" placeholder="Select Veterinarian(s)" />
        <span asp-validation-for="VeterinarianIds" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AppointmentDate" class="control-label">Appointment Date</label>
        <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("CustomerId").addEventListener("change", function() {
            const customerId = this.value;
            const petDropdown = document.getElementById("PetId");

            if (customerId) {
                fetch(`/KoiAppointment/Create?handler=PetsByCustomerId&customerId=${customerId}`)
                    .then(response => response.json())
                    .then(data => {
                        petDropdown.innerHTML = '<option value="">-- Select Pet --</option>';
                        if (data.success) {
                            data.pets.forEach(pet => {
                                const option = document.createElement("option");
                                option.value = pet.id;
                                option.textContent = pet.name;
                                petDropdown.appendChild(option);
                            });
                        } else {
                            alert(data.message);
                        }
                    })
                    .catch(error => console.error('Error fetching pets:', error));
            } else {
                petDropdown.innerHTML = '<option value="">-- Select Pet --</option>';
            }
        });
    </script>
}

